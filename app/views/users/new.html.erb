<% content_for :sidebar do %>
  <li><%= link_to t("list"), users_path  %></li>
  <li class="active"><%= link_to t("new"), new_user_path %></li>
  <li><%= link_to t("invite"), new_invitation_path %></li>  
<% end %>

<h2><%= t("new", :default => "New")%> <%= t("activerecord.models.user") %></h2>

<%= bootstrap_error(@user, User ) %>

<%= form_for :user, :url => users_path, :html => { :class => :form } do |f| -%>
  <%= f.hidden_field :invitation_token %>
  <%= render :partial => "form", :locals => {:f => f} %>
<% end -%>