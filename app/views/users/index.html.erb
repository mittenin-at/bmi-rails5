<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", users_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_user_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> <%= User.human_name %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th><%= User.human_attribute_name('email') %></th>
          <th><%= t("web-app-theme.created_at")  %></th>
          <% if admin? %>
            <th><%= User.human_attribute_name('admin') %></th>
          <% end %>
          <th class="last">&nbsp;</th>
        </tr>
        <% @users.each do |user| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= link_to user.email, user_path(user) %></td>
          <td><%= user.created_at %></td>
          <% if admin? %>
            <td><%= user.admin? ? raw("&#10003;") : "X" %></td>
          <% end %>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show")}", user_path(user) %> |
            <%= link_to "#{t("web-app-theme.edit")}", edit_user_path(user) %> |
            <%= link_to "#{t("web-app-theme.delete")}", user_path(user), :method => :delete, :confirm => "#{t("web-app-theme.confirm")}" %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

