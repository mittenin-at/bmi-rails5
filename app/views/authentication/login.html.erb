<div class="well" style="background-image:url(<%= image_path 'background.png'%>)">
  <h1 class="icon-stethoscope"> BMI Monitor</h1>
  <p><%= raw(t :track) %></p>
</div>

<div class="row-fluid">
  <div class="col-md-4">
    <br/><br/><h3 class="icon-pencil"> <%= t :login %></h3></br>
    <%= form_tag authentication_login_path, :method => :post, :class => 'form' do %>
      <div class="form-group">
        <%= label_tag :email, User.human_attribute_name('email')%>
        <%= text_field_tag :email, params[:email], :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password, t("activerecord.attributes.user.password") %>
        <%= password_field_tag :password, params[:password], :class => 'form-control' %>
      </div>
      <%= button_tag t("login"), class: "btn btn-success" %>
    <% end -%>
  </div>

  <div class="col-md-4">
    <br/><br/><h3 class="icon-check"> <%= t :register %> </h3></br>
    <p><%= raw(t :beta) %></p>
    <%= form_for Invitation.new, :class => 'form' do |f| %>
      <div class="form-group">
        <label><%= t "your_email" %></label>
        <%= f.text_field :recipient_email, :class => 'form-control' %>
      </div>
      <%= f.submit t("register"), class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="col-md-4">
    <br/><br/><h3 class="icon-bullhorn"> <%= t :invite %> </h3></br>
    <p><%= raw(t "invite_friends") %></p>
    <%= form_for Invitation.new, :class => 'form' do |f| %>
      <div class="form-group">
        <label><%= t "email" %></label>
        <%= f.text_field :recipient_email, :class => 'form-control' %>
      </div>
      <%= f.submit t("invite"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>