<div class="well">
  <h1 class="icon-stethoscope"> BMI Monitor</h1>
  <p><%= raw(t :track) %></p>
</div>

<div class="row-fluid">
  <div class="span4">
    <h2 class="icon-pencil"> <%= t :login %></h2>
    <%= form_tag authentication_login_path, :method => :post, :class => 'form' do %>
      <fieldset>
        <%= label_tag :email, User.human_attribute_name('email')%>
        <%= text_field_tag :email, params[:email], :class => 'text_field' %><br />
        <%= label_tag :password, t("activerecord.attributes.user.password") %>
        <%= password_field_tag :password, params[:password], :class => 'text_field' %>
      </fieldset>
      <%= button_tag t("login"), class: "btn btn-success" %>  
    <% end -%>
  </div>  
  <div class="span4">
    <h1 class="icon-check"> <%= t :register %> </h1>
    <p><%= raw(t :beta) %></p>
    <%= form_for Invitation.new, :class => 'form' do |f| %>
      <fieldset>
        <label><%= t "your_email" %></label>
        <%= f.text_field :recipient_email, :class => 'text_field' %>          
      </fieldset>
      <%= f.submit t("register"), class: "btn btn-primary" %>
    <% end %>
  </div>  
  <div class="span4">
    <h1 class="icon-bullhorn"> <%= t :invite %> </h1>
    <p><%= raw(t "invite_friends") %></p>
    <%= form_for Invitation.new, :class => 'form' do |f| %>
      <fieldset>
        <label><%= t "email" %></label>
        <%= f.text_field :recipient_email, :class => 'text_field' %>          
      </fieldset>
      <%= f.submit t("invite"), class: "btn btn-primary" %>
    <% end %>
  </div>    

</div>  