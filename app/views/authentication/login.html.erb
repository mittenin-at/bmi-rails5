<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"></li>
      <li class="active"></li>
    </ul>
  </div>
  <div class="content">

    <div class="inner">
    <%= form_for Invitation.new, :class => 'form' do |f| %>
      <div class="group">
        <br />
        <%= label_tag :beta, "Momentan sind wir in einer geschlossenen beta-Phase. Wenn Sie Ihre Emailadresse hinterlassen, werden wir Sie benachrichtigen,
                              sobald wir weitere Benutzer aufnehmen.", :class => :label %><br /><br />
        <%= label_tag :recipient_email, 'Ihre Email-Adresse', :class => :label %>
        <%= f.text_field :recipient_email, :class => 'text_field' %><br />
        <span class="description">z.B.: max.mustermann@beispiel.com</span>
      </div>
      <div class="group navform wat-cf">
        <button class="button" type="submit">
          <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.submit")}") %> <%= t("web-app-theme.submit") %>
        </button>
      </div>
    <% end %>
    </div>
          
    <h2 class="title"><%= t("web-app-theme.authentication") %></h2>
    <div class="inner">
      <%= form_tag '/authentication/login', :method => :post, :class => 'form' do %>
        <div class="group">
          <%= label_tag :email, User.human_attribute_name('email'), :class => :label %>
          <%= text_field_tag :email, params[:email], :class => 'text_field' %><br />
          <span class="description">z.B.: max.mustermann@beispiel.com</span>
        </div>
        <div class="group">
          <%= label_tag :password, t("activerecord.attributes.user.password"), :class => :label %>
          <%= password_field_tag :password, params[:password], :class => 'text_field' %><br />
          <span class="description">z.B.: geheim$123</span>
        </div>
        <div class="group navform wat-cf">
          <button class="button" type="submit">
            <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.login")}") %> <%= t("web-app-theme.login", :default => "Login") %>
          </button>
        </div>
      <% end -%>
    </div>
  </div>
</div>
