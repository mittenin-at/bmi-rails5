<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", weighings_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_weighing_path %></li>
      <li><%= link_to "#{t("web-app-theme.diagram")}", diagram_weighings_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.compare")}", select_competitor_weighings_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      <% form_tag '/weighings/compare', :method => :post, :class => 'form' do %>
        <p>Vergleichen mit <%= select('competitor', 'id', options_for_select(@competitors.map {|c| [c.email, c.id]}), :include_blank => false ) %></p>
        <p><button class="button" type="submit">
             <%= image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.compare")}") %> <%= t("web-app-theme.compare") %>
           </button></p>
      <% end %>
      <p>&nbsp;</p>
    </div>
  </div>
</div>