<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= Weighing.human_attribute_name('date')  %></th>
      <th><%= Weighing.human_attribute_name('weight')%></th>
      <th><%= Weighing.human_attribute_name('abdominal_girth') %></th>
      <th><%= Weighing.human_attribute_name('adipose')  %></th>
      <th class="last">&nbsp;</th>
    </tr>
  <thead>
  <tbody>
    <% @weighings.each do |weighing| -%>
      <tr>
        <td><%= l weighing.date %></td>
        <td><%= weighing.weight %></td>
        <td><%= weighing.abdominal_girth %></td>
        <td><%= weighing.adipose %></td>
        <td>
          <%= link_to t("edit"), edit_weighing_path(weighing), class: "btn btn-xs btn-warning" %>
          <%= link_to t("delete"), weighing_path(weighing), :method => :delete, :confirm => t("confirm"), class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>
<%= paginate @weighings, :theme => 'twitter-bootstrap-3' %>